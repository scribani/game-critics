<h2 class="heading--sm text-center mb-16">Sign in to your account</h2>

<section class="yield-section">
  <p class="content--xs overline text-center">Continue with</p>

  <div class="flex justify-center gap-16">
    <%= link_to "Github", user_github_omniauth_authorize_path, method: :post, class: "btn btn--medium btn--secondary" %>
    <%= link_to "Gitlab", user_gitlab_omniauth_authorize_path, method: :post, class: "btn btn--medium btn--secondary" %>
  </div>

  <p class="content--xs overline text-center">Or</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="input mb-16">
      <%= f.label :email, class: "content--xs overline" %>
      <div class="input__container">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com", class: "input__content" %>
      </div>
      <% if resource.errors.messages[:email].any? %>
        <span class="content--sm input__error-message"><%= resource.errors.messages[:email].join(", ")%></span>
      <% end %>
    </div>

    <div class="input mb-16">
      <%= f.label :password, class: "content--xs overline" %>
      <div class="input__container">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "********", class: "input__content" %>
      </div>
      <% if resource.errors.messages[:password].any? %>
        <span class="content--sm input__error-message"><%= resource.errors.messages[:password].join(", ")%></span>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-8">
        <%= f.check_box :remember_me, class: "checkbox__input" %>
        <div class="checkbox__text-container">
          <%= f.label :remember_me, class:"content--sm" %>
        </div>
      </div>
    <% end %>

    <%= link_to "Forgot your password?", new_user_password_path, class: "anchor content--sm" %>
    <%= f.submit "Sign in", class: "btn btn--primary" %>
  <% end %>

  <p class="content--sm text-center">Don't have an account?</p>
  <%= link_to "Create an acount", new_user_registration_path, class: "anchor text-center" %>
</section>
